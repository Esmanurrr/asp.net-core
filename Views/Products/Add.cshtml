
@{
    ViewData["Title"] = "Add";
}

<h1>Add Product</h1>

@model Product


<form asp-controller="Products" asp-action="Add" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name :</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Product Price :</label>
        <input type="text" class="form-control" asp-for="Price"/>
    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Product Stock :</label>
        <input type="text" class="form-control" asp-for="Stock"/>
    </div>
    <div class="mb-3">
        @*<label asp-for="Color" class="form-label">Product Color :</label>
        <input type="text" class="form-control" asp-for="Color" />*@

        <select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSelect">
            <option selected> Renk Seçiniz</option>
        </select>
        
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsPublish">
        <label class="form-check-label" asp-for="IsPublish">
             Yayınlansın mı?
        </label>
    </div>
    <div class="mb-3 mt-3">
        <span>Ürün kaç ay satışta kalacak?</span>
    @foreach (var @item in ViewBag.Expire as Dictionary<string, int>)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" id="@(item.Value)Expire" asp-for="Expire" value="@item.Value">
                <label class="form-check-label" for="@(item.Value)Expire">
                @item.Key
            </label>
        </div>
    }
    </div>

    <div class="form-floating mb-3">
        <label asp-for="Description">Product Description : </label>
        <textarea asp-for="Description" class="form-control" placeholder="Product Description" style="height: 100px"></textarea>
        
    </div>

    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">Product Publish Date :</label>
        <input class="form-control" asp-for="PublishDate" />
    </div>

    <button type="submit" class="btn btn-primary">Add product</button>

</form>


